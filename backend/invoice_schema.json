{
  "type": "object",
  "properties": {
    "tpin": { "type": "string", "maxLength": 10, "required": true, "description": "Taxpayer’s identification number as registered on core Tax Administration System" },
    "bhfId": { "type": "string", "maxLength": 3, "required": true, "description": "Taxpayer branch (store) location identifier" },
    "orgInvcNo": { "type": "number", "required": false, "description": "The invoice number being referred to if you are issuing a credit note or debit note" },
    "cisInvcNo": { "type": "string", "maxLength": 50, "required": true, "description": "Invoice number as generated on Taxpayers Certified invoicing solutions" },
    "custTpin": { "type": "string", "maxLength": 10, "required": false, "description": "Customers taxpayer’s identification number as registered on core Tax Administration System" },
    "custNm": { "type": "string", "maxLength": 60, "required": false, "description": "Customers name" },
    "salesTyCd": { "type": "string", "maxLength": 5, "required": true, "enum": ["N", "C", "T", "P"], "description": "Code associated with type of sale e.g. Normal sales, Copy sale" },
    "rcptTyCd": { "type": "string", "maxLength": 5, "required": true, "enum": ["S", "R", "D"], "description": "Type of receipt" },
    "pmtTyCd": { "type": "string", "maxLength": 5, "required": false, "enum": ["01", "02", "03", "04", "05", "06", "07", "08"], "description": "The mode of payment used for this transaction" },
    "salesSttsCd": { "type": "string", "maxLength": 5, "required": true, "enum": ["02"], "description": "Progress of transaction e.g. Approved, Refunded etc." },
    "cfmDt": { "type": "string", "pattern": "^[0-9]{14}$", "required": true, "description": "Date time when invoice was issued" },
    "salesDt": { "type": "string", "pattern": "^[0-9]{8}$", "required": true, "description": "Date when sale was made" },
    "stockRlsDt": { "type": "string", "pattern": "^[0-9]{14}$", "required": false, "description": "Date when the item was released from the warehouse/branch" },
    "cnclReqDt": { "type": "string", "pattern": "^[0-9]{14}$", "required": false, "description": "Date time when a cancellation request was made. This is used when one needs to cancel an invoice" },
    "cnclDt": { "type": "string", "pattern": "^[0-9]{14}$", "required": false, "description": "Date when cancellation was approved" },
    "rfdDt": { "type": "string", "pattern": "^[0-9]{14}$", "required": false, "description": "Date when refund was made (null when not a refund)" },
    "rfdRsnCd": { "type": "string", "maxLength": 5, "required": false, "enum": ["01", "02"], "description": "Reason for refund" },
    "totItemCnt": { "type": "integer", "required": true, "description": "Total number of items" },
    "taxblAmtA": { "type": "number", "required": true, "description": "Taxable amount for class A" },
    "taxblAmtB": { "type": "number", "required": false, "description": "Taxable amount for class B" },
    "taxblAmtC": { "type": "number", "required": false, "description": "Taxable amount for class C" },
    "taxblAmtD": { "type": "number", "required": false, "description": "Taxable amount for class D" },
    "taxblAmtE": { "type": "number", "required": false, "description": "Taxable amount for class E" },
    "taxAmtA": { "type": "number", "required": true, "description": "Tax amount for class A" },
    "taxAmtB": { "type": "number", "required": false, "description": "Tax amount for class B" },
    "taxAmtC": { "type": "number", "required": false, "description": "Tax amount for class C" },
    "taxAmtD": { "type": "number", "required": false, "description": "Tax amount for class D" },
    "taxAmtE": { "type": "number", "required": false, "description": "Tax amount for class E" },
    "totTaxblAmt": { "type": "number", "required": true, "description": "Total taxable amount" },
    "totTaxAmt": { "type": "number", "required": true, "description": "Total tax amount" },
    "totAmt": { "type": "number", "required": true, "description": "Grand total" },
    "prtMsg": { "type": "string", "required": false, "description": "Print message" },
    "remark": { "type": "string", "required": false, "description": "Remarks" },
    "regrId": { "type": "string", "required": false, "description": "Registrant ID" },
    "regrNm": { "type": "string", "required": false, "description": "Registrant name" },
    "modrId": { "type": "string", "required": false, "description": "Modifier ID" },
    "modrNm": { "type": "string", "required": false, "description": "Modifier name" },
    "itemList": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "itemSeq": { "type": "integer", "required": true, "description": "Item sequence" },
          "itemCd": { "type": "string", "required": false, "description": "Item code" },
          "itemClsCd": { "type": "string", "required": false, "description": "Item classification code" },
          "itemNm": { "type": "string", "required": true, "description": "Item name" },
          "bcd": { "type": "string", "required": false, "description": "Barcode" },
          "pkgUnitCd": { "type": "string", "required": false, "description": "Package unit code" },
          "pkg": { "type": "number", "required": false, "description": "Package quantity" },
          "qtyUnitCd": { "type": "string", "required": false, "description": "Quantity unit code" },
          "qty": { "type": "number", "required": true, "description": "Quantity" },
          "prc": { "type": "number", "required": true, "description": "Unit price" },
          "splyAmt": { "type": "number", "required": true, "description": "Supply amount" },
          "dcRt": { "type": "number", "required": false, "description": "Discount rate" },
          "dcAmt": { "type": "number", "required": false, "description": "Discount amount" },
          "zeroVatAmt": { "type": "number", "required": false, "description": "Zero VAT amount" },
          "taxTyCd": { "type": "string", "required": true, "enum": ["A", "B", "C", "D", "E"], "description": "Tax type code" },
          "taxblAmt": { "type": "number", "required": true, "description": "Taxable amount" },
          "taxAmt": { "type": "number", "required": true, "description": "Tax amount" },
          "totAmt": { "type": "number", "required": true, "description": "Total item amount" }
        }
      },
      "required": true
    }
  }
}